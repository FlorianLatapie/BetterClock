<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.betterclock.ClockController">
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER_RIGHT">
            <ProgressBar fx:id="hourProgressBar" prefWidth="200.0" progress="0.0" />

            <Label fx:id="welcomeText" text="XX:XX">
            <font>
               <Font size="75.0" />
            </font></Label>
            <ProgressBar fx:id="minuteProgressBar" layoutX="30.0" layoutY="30.0" prefWidth="200.0" progress="0.0" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="-10.0" />
         </padding>
        </VBox>
    </center>
   <top>
      <MenuBar fx:id="menuBar" onMouseEntered="#onMenuEntered" onMouseExited="#onMenuExited" opacity="0.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#onCloseMenuItemAction" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
